// TypeScript config file that is used to compile the Components package through Gulp. As the
// long term goal is to switch to Bazel, and we already want to run tests with Bazel, we need to
// ensure the TypeScript build options are the same for Gulp and Bazel. We achieve this by
// extending the generic Bazel build tsconfig which will be used for each entry-point.
{
  "extends": "../bazel-tsconfig-build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/packages/layouts",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "../../dist/packages/layouts"
    ],
    "paths": {
      "@gsa-sam/components/*": ["../../dist/packages/components/*"],
      "@gsa-sam/layouts/*": ["../../dist/packages/layouts/*"]
    }
  },
  "files": [
    "public-api.ts",
    "typings.d.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@gsa-sam/layouts",
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true
  }
}
